# Database (port 5433 - avoid conflict with local PostgreSQL on 5432)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/retail_forecast
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5433/retail_forecast

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
API_KEY_ADMIN=dev-admin-key-change-in-production

# LLM (modulární přepínač, default deepseek)
OPENAI_API_KEY=
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com

# RAG
RAG_ENABLED=true
VECTORSTORE=chroma
EMBEDDINGS_PROVIDER=deepseek
RAG_COLLECTION_NAME=retail_knowledge

# Application
LOG_LEVEL=INFO
DEBUG=false

# Kaggle (API token from https://www.kaggle.com/settings)
KAGGLE_API_TOKEN=

# Frontend API (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
